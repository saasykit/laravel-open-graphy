{
    "name": "saasykit/laravel-open-graphy",
    "description": "An awesome open graph image (social cards) generator package for Laravel.",
    "keywords": [
        "Ahmad Mas",
        "laravel",
        "laravel-open-graphy"
    ],
    "homepage": "https://github.com/saasykit/laravel-open-graphy",
    "license": "MIT",
    "authors": [
        {
            "name": "Ahmad Mas",
            "email": "hi@saasykit.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "chrome-php/chrome": "^1.11",
        "illuminate/contracts": "^10.0||^11.0||^12.0",
        "spatie/laravel-package-tools": "^1.16",
        "ext-fileinfo": "*"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "orchestra/testbench": "^9.0.0||^8.22.0",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-arch": "^2.7",
        "pestphp/pest-plugin-laravel": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "SaaSykit\\OpenGraphy\\": "src/",
            "SaaSykit\\OpenGraphy\\Database\\Factories\\": "database/factories/"
        },
        "files": ["src/helpers.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "SaaSykit\\OpenGraphy\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-laravel-open-graphy --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "SaaSykit\\OpenGraphy\\OpenGraphyServiceProvider"
            ],
            "aliases": {
                "OpenGraphy": "SaaSykit\\OpenGraphy\\Facades\\OpenGraphy"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
